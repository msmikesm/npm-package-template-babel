{
    "compilerOptions": {
        "target": "ESNext",
        "declaration": true,
        "allowJs": true,
        "outDir": "./lib",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "moduleResolution": "node"
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}